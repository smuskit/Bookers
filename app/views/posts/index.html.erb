<% if flash[:destroy] %>
  <p><%= flash[:destroy] %></p>
<% end %>

<h1> Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>body</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to "Show", post_path(post), class: "show_#{post.id}"%></td>
        <td><%= link_to "Edit", edit_post_path(post), class: "edit_#{post.id}" %></td>
        <td><%= link_to "Destroy", post_path(post), method: :delete, class: "destroy_#{post.id}", "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2> New book</h2>

<%= form_for(@post) do |f| %>

  <h4> Title</h4>
  <%= f.text_field :title, class: "book_title" %>

  <h4> Body</h4>
  <%= f.text_area :body, class: "book_body" %>

  <p><%= f.submit 'Create Book' %></p>

<% end %>


